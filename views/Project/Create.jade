extends ../layout

block content

    h1 Create
    form(class="project-form" ,action="/Project/Create", method="post")
        div(class="error-box")
            p= error
        label(for="Title") Title

        input(required ,class="project-form-item" ,type="text", name="Title")
        input(required ,class="project-form-item" ,type="text", name="Description")
        input(required ,class="project-form-item" ,type="text", name="Github")
        select(name="Selectpicker") 
            option(value="Javascript") Javascript
            option(value="C#") C#
        input(type="submit", value="Create Project")


            
        
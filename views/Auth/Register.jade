div(class="auth-form-container")
    form(class="auth-form" ,action="/Auth/Register", method="post")
        label(for="Username") Username
        input(class="auth-form-item" ,required type="text", name="Username")
        label(for="Email") Email
        input(class="auth-form-item" ,required type="email", name="Email")
        label(for="Password") Password
        input(class="auth-form-item" ,required type="password", name="Password")
        input(class="auth-form-submit" ,type="submit", value="Register")
    
    a(class="link" ,href="/") Home